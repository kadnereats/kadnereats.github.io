{
  "name": "vertex",
  "version": "1.0.0",
  "description": "A minimal and light template for technology blog",
  "dependencies": {
    "autoprefixer": "^10.4.12",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "live-server": "^1.2.2"
  },
  "scripts": {
    "build": "tailwindcss build src/css/tailwind.css -o public/css/app.css",
    "product": "tailwindcss build -i src/css/tailwind.css -o public/css/app.css --minify",
    "watch": "tailwindcss build src/css/tailwind.css -o public/css/app.css --watch",
    "start": "live-server public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nothehi/vertex.git"
  },
  "keywords": [
    "minimal blog",
    "html template"
  ],
  "author": {
    "name": "Rahil Shaik",
    "email": "rahilisashaik@berkeley.edu",
    "url": "https://rahilisashaik.github.io/"
  },
